WindowManager
    Registration:
    Definitions:
    Quiz:

<Registration>:
    name: "Registration"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Registration"
            font_size: 32

        Button:
            text: "Next Screen"
            font_size: 12
            on_release:
                app.root.current = "Definitions"
                root.manager.transition.direction = "left"

<Definitions>:
    name: "Definitions"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Definitions"
            font_size: 32

        Button:
            text: "Next Screen"
            font_size: 12
            on_release:
                app.root.current = "Quiz"
                root.manager.transition.direction = "left"

<Quiz>:
    name: "Quiz"

    GridLayout:
        cols: 1
        spacing: 10
        size_hint_y: None
        height: self.minimum_height
        
        ScrollView:
            size_hint: 1, None
            size: 400, 200
            do_scroll_x: False
            do_scroll_y: True
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                id: question_layout

        Button:
            text: "Next"
            size_hint_y: None
            height: 40
            on_release: root.next_question(None)